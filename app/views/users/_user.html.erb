
<div id="<%= dom_id user %>">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
          
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">User Profile</h5>
            </div>
            <div class="card-body">
              <div class="d-flex flex-column align-items-center mb-4">
                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px">
                  <i class="bi bi-person-fill text-white" style="font-size:50px"></i>
                </div>
              </div>

              <div class="d-flex flex-column gap-4">
                <div class="row">
                  <div class="col-12 col-md-4">
                    <label class="small fw-medium text-muted mb-1 d-block">Name</label>
                  </div>
                  <div class="col-12 col-md-8">
                    <div class="fw-medium"><%= user.name %> </div>
                  </div>
                </div>

                <hr class="my-0" />

                <div class="row">
                  <div class="col-12 col-md-4">
                    <label class="small fw-medium text-muted mb-1 d-block">Email</label>
                  </div>
                  <div class="col-12 col-md-8">
                    <div class="fw-medium"><%= user.email %></div>
                  </div>
                </div>

                <hr class="my-0" />

                <div class="row">
                  <div class="col-12 col-md-4">
                    <label class="small fw-medium text-muted mb-1 d-block">Role</label>
                  </div>
                  <div class="col-12 col-md-8">
                    <div>
                      <span class="badge text-bg-primary">Mechanic</span>
                    </div>
                  </div>
                </div>

                <hr class="my-0" />

                <div class="row">
                  <div class="col-12 col-md-4">
                    <label class="small fw-medium text-muted mb-1 d-block">Member Since</label>
                  </div>
                  <div class="col-12 col-md-8">
                    <div class="fw-medium"><%= user.created_at.strftime("%B %d, %Y") %></div>
                  </div>
                </div>

                <hr class="my-0" />

                <div class="row">
                  <div class="col-12 col-md-4">
                    <label class="small fw-medium text-muted mb-1 d-block">Status</label>
                  </div>
                  <div class="col-12 col-md-8">
                    <div>
                      <span class="badge bg-success">Active</span>
                    </div>
                  </div>
                </div>
              </div>

              <div class="d-flex gap-2 mt-4 pt-3 border-top">
                  
                  <%= link_to "Edit Profile", edit_user_path(user), class:"btn btn-outline-secondary" %>
             
                <button class="btn btn-outline-secondary">
                  
                  Account Settings
                </button>
              </div>
            </div>
          </div>

          <div class="row g-3 mt-3">
            <div class="col-12 col-md-6">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-subtitle text-muted mb-3">Jobs Completed</h6>
                  <div class="h2 mb-1">127</div>
                  <p class="text-success small mb-0">This month: 23</p>
                </div>
              </div>
            </div>
            <div class="col-12 col-md-6">
              <div class="card">
                <div class="card-body">
                  <h6 class="card-subtitle text-muted mb-3">Average Rating</h6>
                  <div class="h2 mb-1">4.8 ‚≠ê</div>
                  <p class="text-muted small mb-0">Based on 85 reviews</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


